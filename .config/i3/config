bindsym $mod+Shift+d      mode $launchmenu

mode $launchmenu {
    bindsym e         exec element-desktop, mode "default"
    bindsym t         exec "~/gt.sh 'aerc'", mode "default"
    bindsym r         exec "~/gt.sh 'tuir'", mode "default"
    bindsym f         exec "~/gt.sh 'fb-messenger-cli'", mode "default"
    bindsym d \
        exec firefox;\
        exec "~/gt.sh 'aerc'";\
        exec "~/gt.sh 'newsboat -r'";\
        exec "~/gt.sh 'fb-messenger-cli'",\
        mode "default"
    bindsym c         exec firefox, mode "default"
    bindsym Shift+c   exec firefox -private-window, mode "default"
    bindsym Shift+w   exec firefox vimwiki_html/index.html, mode "default"
    bindsym m \
        exec "~/gt.sh 'cd MasterThesis; nvim .'";\
	exec "~/gt.sh 'nvim -c :VimwikiIndex'";\
        mode "default"
    bindsym w         exec "~/gt.sh 'nvim -c :VimwikiIndex'", mode "default"
    bindsym l         exec "~/gt.sh 'unbuffer todoist --color list | cut -c 21- | nl'", mode "default"
    bindsym m \
        exec "~/gt.sh 'cmus'";\
        exec "~/gt.sh 'pulsemixer'",\
        mode "default"
    bindsym dead_acute \
        workspace 12:Music;\
        exec "~/gt.sh tizonia";\
        exec pavucontrol;\
        exec blueman-manager;\
        workspace back_and_forth,\
        mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

