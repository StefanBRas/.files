# exit screen ting
set $sysmenu "system:  [r]eload  [l]ogout  [p]oweroff  re[b]oot"
bindsym $mod+Shift+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# audiomenu
set $audiomenu "[Up] Pavucontrol [Right] next [Left] previous [Space] play/pause"
bindsym $mod+Shift+a      mode $audiomenu

mode $audiomenu {
    bindsym Up         exec pavucontrol ,mode "default" 
    bindsym Down       mode "default"
    bindsym Right      exec playerctl next
    bindsym Left       exec playerctl previous
    bindsym space      exec playerctl play-pause
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

