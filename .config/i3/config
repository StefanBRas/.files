# pomodoro toggling
set $pomodoro "Pomodoro: 1) Toggle 2) Start 3) Stop 4) Skip 5) Reset "
bindsym $mod+Shift+apostrophe      mode $pomodoro

mode $pomodoro {
    bindsym 1	exec python3 /usr/bin/pomodoro-client toggle, mode "default"
    bindsym 2   exec python3 /usr/bin/pomodoro-client start, mode "default"
    bindsym 3	exec python3 /usr/bin/pomodoro-client stop, mode "default"
    bindsym 4   exec python3 /usr/bin/pomodoro-client skip, mode "default"
    bindsym 5   exec python3 /usr/bin/pomodoro-client reset, mode "default"
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

